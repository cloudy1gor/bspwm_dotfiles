# Terminal
super + Return
	kitty

# Terminal (floating)
super + shift + Return
  bspc rule -a kitty -o state=floating follow=on center=true rectangle=990x710+0+0 && kitty

# bpytop
alt + shift + b
  bspc rule -a kitty -o state=floating follow=on center=true rectangle=1290x910+0+0 && kitty bpytop

# program launcher
# super + d
alt + F1
	rofi -modi drun -show drun -line-padding 4 \
                -columns 2 -padding 50 -hide-scrollbar -terminal xfce4-terminal \
                -show-icons -drun-icon-theme "Arc-X-D" -font "Droid JetBrains Mono 12"

# Open/close dashboard
super + b
	sh ~/.config/eww/dashboard/launch_dashboard

# show open window
alt + Tab
		rofi -no-lazy-grab -show window -theme ~/.config/rofi/window.rasi

# show ssh sesssions
super + shift + d
	rofi -modi drun -show ssh -line-padding 4 \
                -columns 2 -padding 50 -hide-scrollbar -terminal xfce4-terminal \
                -show-icons -drun-icon-theme "Arc-X-D" -font "Droid Sans Regular 10"

# power-menu
super + shift + e
     ~/.config/rofi/powermenu.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

; # expand a window by moving one of its side outward
; super + alt + {h,j,k,l}
; 	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

; # contract a window by moving one of its side inward
; super + alt + shift + {h,j,k,l}
; 	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# i3 like resizing
super + alt + h
    /bin/sh $HOME/.config/bspwm/resize/shrinkx.sh
super + alt + l
    /bin/sh $HOME/.config/bspwm/resize/expandx.sh
super + alt + k
    /bin/sh $HOM.config/bspwm/resize/shrinky.sh
super + alt + j
    /bin/sh $HOME/.config/bspwm/resize/expandy.sh

#
# Special hotkeys
#

# Hide/Unhide Window
super + w
	~/.config/bspwm/scripts/winmask.sh

# Multimedia keys

XF86Audio{Raise,Lower}Volume
	~/.config/sxhkd/scripts/volume.sh {up,down}

# Mute/Unmute Volume.
XF86AudioMute
	~/.config/sxhkd/scripts/volume.sh mute

# Raise/Lower Brightness.
XF86MonBrightness{Up,Down}
	~/.config/sxhkd/scripts/brightness.sh {up,down}

# Generate Random Password.
super + shift + p
	~/.config/sxhkd/scripts/randompass.sh

# Wifi
super + n
	~/.config/rofi/wifi.sh

# Bluetooth
super + shift + b
	~/.config/rofi/bluetooth.sh

# Touchpad
super + shift + o
	~/.config/sxhkd/scripts/touchpad.sh

# Screenshot
Print
  flameshot gui

# Wallpapers
super + shift + w
	feh --bg-scale --randomize --no-fehbg ~/Pictures/Wallpapers/*

# Install
super + shift + i
  bspc rule -a kitty -o state=floating follow=on center=true rectangle=990x810+0+0 && kitty ~/.config/sxhkd/scripts/install.sh

# Remove
super + shift + u
  bspc rule -a kitty -o state=floating follow=on center=true rectangle=990x810+0+0 && kitty ~/.config/sxhkd/scripts/remove.sh

# Clear cashe
super + shift + y
  bspc rule -a kitty -o state=floating follow=on center=true rectangle=590x210+0+0 && kitty ~/.config/sxhkd/scripts/cashe.sh

super + BackSpace
  thunar

alt + Return
	kitty ranger

alt + m
	kitty cmus

alt + shift + v
  code

alt + shift + w
  google-chrome-stable

alt + shift + m
	google-chrome-stable https://music.youtube.com

alt + shift + y
	google-chrome-stable https://youtube.com
