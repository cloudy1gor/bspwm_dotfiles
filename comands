- sudo timedatectl set-local-rtc 1 --adjust-system-clock

- sudo pacman -S --needed base-devel git
- git clone https://aur.archlinux.org/pikaur.git
- cd pikaur4
- makepkg -fsri

- pikaur -S picom-jonaburg-git redshift-minimal snapd visual-studio-code-bin google-chrome
- sudo systemctl enable --now snapd.socket

- pikaur -S ttf-joypixels noto-fonts noto-fonts-cjk noto-fonts-emoji nerd-fonts-noto-sans-regular-complete ttf-unifont ttf-symbola ttf-jetbrains-mono

- sudo snap install btop

- sudo pacman -S kitty fish thunar ranger ueberzug neofetch neovim feh musikcube capitaine-cursors zathura
- chsh -s /usr/bin/fish

- sudo pacman -S telegram-desktop llpp discord flameshot mpv transmission-qt copyq ncdu

- sudo pacman -S nodejs-lts-fermium npm yarn

- sudo npm install --global typescript gulp

- sudo pacman -R firefox

- git clone https://github.com/alexanderjeurissen/ranger_devicons ~/.config/ranger/plugins/ranger_devicons

- sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim --create-dirs \
